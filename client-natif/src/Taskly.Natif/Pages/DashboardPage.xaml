<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                 
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:model="clr-namespace:Taskly.Client.Application.Model;assembly=Taskly.Client.Application"
             x:Class="Taskly.Natif.Pages.DashboardPage"
             xmlns:vm="clr-namespace:Taskly.Natif.ViewModels"
             Title="Dashboard"
             Shell.FlyoutBehavior="Flyout"
             x:DataType="vm:DashboardViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding PageLoadedCommand}" EventName="Loaded" />
    </ContentPage.Behaviors>
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Todos}" HasUnevenRows="True" SeparatorVisibility="None" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:TodoModel">
                    <ViewCell>
                        <Grid
                            ColumnDefinitions="1*,8*,1*"
                            RowDefinitions="*,*"
                            RowSpacing="1"
                            Padding="10">
                            <Label Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding Name}"
                                FontSize="14"
                                TextDecorations="Underline"
                                FontAttributes="Bold"
                                HorizontalOptions="Fill" />
                            <Label Grid.Row="1"     
                                Grid.Column="1"
                                Text="{Binding Content}"
                                FontAttributes="Italic"
                                HorizontalOptions="Fill"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>