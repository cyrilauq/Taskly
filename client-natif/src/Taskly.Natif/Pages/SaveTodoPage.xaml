<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskly.Natif.Pages.SaveTodoPage"  
             xmlns:vm="clr-namespace:Taskly.Natif.ViewModels"         
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="vm:SaveTodoViewModel">
    <VerticalStackLayout>
        <Label Text="Name" />
        <Entry 
            Placeholder="Todo name"  
            Text="{Binding TodoName}"/>
        <Label Text="Content" />
        <Entry 
            Placeholder="Todo's content" 
            Text="{Binding TodoContent}"/>
        <Button 
            Text="Save"                                                      
            Style="{StaticResource TasklyButton}"
            Command="{Binding SaveCommand}"/>
    </VerticalStackLayout>
</toolkit:Popup>