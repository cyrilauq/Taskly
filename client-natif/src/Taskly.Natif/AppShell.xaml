<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Taskly.Natif.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Taskly.Natif"
    xmlns:pages="clr-namespace:Taskly.Natif.Pages"
    xmlns:vm="clr-namespace:Taskly.Natif.ViewModels"
    Title="Taskly.Natif">
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="0.075*,0.8*">
                <Label Grid.Column="1"
                       Text="{Binding Title}"
                       VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
    <Shell.FlyoutHeader>
        <ContentView
            Padding="10,10,0,10"
            HeightRequest="55"
            BackgroundColor="{StaticResource TasklyBlue}">
            <HorizontalStackLayout>
                <Label 
                    Text="Hello "          
                    TextColor="{StaticResource White}"
                    VerticalTextAlignment="Center"/>
                <Label           
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Text="{Binding ConnectedUser}" 
                    TextColor="{StaticResource White}"
                    VerticalTextAlignment="Center"/>
            </HorizontalStackLayout>
        </ContentView>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Home" FlyoutItemIsVisible="False">
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Dashboard">
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate pages:DashboardPage}"
                Route="Dashboard" />
        </Tab>
    </FlyoutItem>

</Shell>
