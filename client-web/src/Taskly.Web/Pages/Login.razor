@page "/login"

<h3>Login</h3>

<p>User is @(AuthState.IsAuthenticated ? "Authenticated" : "Anonymous")</p>

@if(HasError)
{
    <div>
        <p>@(Error)</p>
    </div>
}

<EditForm class="w-50" EditContext="EditContext" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">Login</label>
        <div class="col-sm-4">
            <InputText @bind-Value="LoginModel.Login" placeholder="Pseudo or Email" id="login" />
        </div>
        <ValidationMessage For="() => LoginModel.Login" />
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-4">
            <InputText @bind-Value="LoginModel.Password" id="password" />
            <ValidationMessage For="() => LoginModel.Password" />
        </div>
    </div>
    <button class="btn btn-outline-primary py-1 rounded-3" type="submit">Login</button>
</EditForm>
