@page "/dashboard"
@attribute [Authorize]

<h3>Dashboard</h3>

<p>Number of todos: @(TodoCount)</p>

<EditForm class="w-50" EditContext="EditContext" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-4">
            <InputText @bind-Value="Todo.Name" placeholder="Pseudo or Email" id="name" />
        </div>
        <ValidationMessage For="() => Todo.Name" />
    </div>
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-4">
            <InputText @bind-Value="Todo.Content" placeholder="Pseudo or Email" id="content" />
        </div>
        <ValidationMessage For="() => Todo.Content" />
    </div>
    <button class="btn btn-outline-primary py-1 rounded-3" type="submit">Login</button>
</EditForm>
