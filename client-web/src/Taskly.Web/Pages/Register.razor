@page "/register"

<h3>Register</h3>

<EditForm 
    Model="FormModel" 
    OnValidSubmit="OnSubmit"
    class="d-flex flex-column col-5 align-items-center"
>
    @if(ErrorMessage != null)
    {
        <div class="text-danger col-12 border-danger">
            @(ErrorMessage)
        </div>
    }
    <DataAnnotationsValidator />
    <div class="form-group row col-10">
        <label class="d-flex flex-wrap justify-content-between">
            Name:
            <InputText @bind-Value="FormModel.Lastname" />
        </label>
    </div>
    <div class="form-group row col-10">
        <label class="d-flex flex-wrap justify-content-between">
            Firstname:
            <InputText @bind-Value="FormModel.Firstname" />
        </label>
    </div>
    <div class="form-group row col-10">
        <label class="d-flex flex-wrap justify-content-between">
            Pseudo:
            <InputText @bind-Value="FormModel.Pseudo" />
        </label>
    </div>
    <div class="form-group row col-10">
        <label class="d-flex flex-wrap justify-content-between">
            Email:
            <InputText @bind-Value="FormModel.Email" />
        </label>
    </div>
    <div class="form-group row col-10">
        <label class="d-flex flex-wrap justify-content-between">
            Birthdate:
            <InputDate @bind-Value="FormModel.BirthDate" />
        </label>
    </div>
    <div class="form-group row col-10">
        <label class="d-flex flex-wrap justify-content-between">
            Password:
            <InputText type="password" @bind-Value="FormModel.Password" />
        </label>
    </div>
    <div class="form-group row col-10">
        <label class="d-flex flex-wrap justify-content-between">
            Confirm your password:
            <InputText type="password" @bind-Value="FormModel.ConfirmPassword" />
        </label>
    </div>
    <button class="btn btn-outline-primary py-1 rounded-3 col-4" type="submit">Register</button>
</EditForm>